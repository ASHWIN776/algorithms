#include <bits/stdc++.h>
#define fastIO ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0);
using namespace std;
typedef long long int ll;
int main(int argc, char const *argv[])
{
	fastIO
	ll a,b,c,i,j,k,r,t,n;
	ll A[30];
	r=1;
	for (int i = 0; i < 30; ++i)
	{
		A[i]=r;
		r*=2;
	}
	cin>>t;
	while(t--){
		cin>>n;
		r=1;
		a=n-1;
		a/=2;
		b=n-2;
		r=1;
		while(a--){
			r+=A[b];
			b-=2;
		}
		cout<<r<<" "<<A[n]<<"\n";
	}
	return 0;
}